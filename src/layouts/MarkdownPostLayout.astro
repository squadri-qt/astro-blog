---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>
<img src={frontmatter.image.url} alt={frontmatter.image.alt} class="featuredImage"/>
<p>Written by {frontmatter.author}</p>
<p>Edited last:{frontmatter.pubDate.slice(0,10)}</p>
<p>Intro: {frontmatter.description}</p>
<slot />
<a href=/blog>Back to blog</a>
</BaseLayout>